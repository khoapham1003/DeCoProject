<Window x:Class="DeCo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeCo"
        xmlns:uc="clr-namespace:DeCo.UserControlUI"
        xmlns:i ="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Name="mainWindow"
        DataContext="{StaticResource MainVM}"
        Title="MainWindow" Height="700" Width="1300" 
        Background="#FFF6E7">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedWindowCommand}" CommandParameter="{Binding ElementName=mainWindow}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <uc:MenuBar/>
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <!--*MAIN*-->
            <TabControl Name="Tab"
                        Grid.ColumnSpan="3"
                        Grid.RowSpan="5"
                        materialDesign:ColorZoneAssist.Background="#A3C0F8"
                        materialDesign:ShadowAssist.ShadowDepth="Depth3"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        SnapsToDevicePixels="True"
                Style="{StaticResource MaterialDesignFilledUniformTabControl}"
                        TabStripPlacement="Left">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Grid Name="Panel">
                                        <ContentPresenter ContentSource="Header"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Panel" Property="Background" Value="#FFF6E7" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Panel" Property="Background" Value="#A3C0F8" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <!--TAB ORDER-->
                <TabItem Margin="0,8" Height="80" DataContext="{StaticResource OrdVM}">
                    <TabItem.Header>
                        <StackPanel Width="180" 
                                    Height="50"
                                    Orientation="Horizontal" Background="#F0D6AF">
                            <materialDesign:PackIcon Width="30"
                                                     Height="30"
                                                     Margin="10,0"
                                                     Kind="Paper" 
                                                     Foreground="Black"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="ORDER" 
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       FontWeight="Light" 
                                       FontSize="20"
                                       />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="620"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!--Products List Grid-->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"></RowDefinition>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock Text="List of Products"
                                           Foreground="IndianRed"
                                           FontSize="25"
                                           VerticalAlignment="Bottom"
                                           Margin="10,0,0,0"/>
                                <TextBox 
                                                    Width="360"
                                                    Margin="250,20,10,0"
                                                    Height="40"
                                                    BorderBrush="Black"
                                                    Foreground="Black"
                                                    Background="Beige"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    materialDesign:HintAssist.Hint="   Find by Name   "
                                    materialDesign:HintAssist.HintOpacity="0.4"
                                    materialDesign:HintAssist.IsFloating="True"
                                    materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"
                                                    materialDesign:HintAssist.Foreground="Black"
                                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,-3,0,0"
                                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                    BorderThickness="1"
                                                    VerticalAlignment="Top"
                                                    CaretBrush="Gray"   
                                                    Text="{Binding SearchString, UpdateSourceTrigger=PropertyChanged}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="TextChanged">
                                            <i:InvokeCommandAction Command="{Binding Searching}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>

                            </Grid>
                            <!--Products List-->
                            <Grid Grid.Row="1">
                                <DataGrid Margin="10" Background="#D9D9D9"
                                                  AlternatingRowBackground="#FFF8EBF9"
                                                  RowBackground="WhiteSmoke"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  Focusable="False"
                                                  IsReadOnly="True"
                                                  IsSynchronizedWithCurrentItem="False"
                                                  ItemsSource="{Binding products,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                                  SelectedItem="{Binding SelectedItem, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">

                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                            <Setter Property="Background" Value="#D9D9D9"/>
                                            <Setter Property="Height" Value="30"/>
                                            <Setter Property="Margin" Value="20,5"></Setter>
                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                            <Setter Property="FontSize" Value="15"></Setter>
                                        </Style>
                                    </DataGrid.Resources>

                                    <DataGrid.Columns>

                                        <materialDesign:DataGridTextColumn Width="70"
                                                                                   Binding="{Binding Id}"
                                                                                   FontSize="15" FontWeight="Bold" 
                                                                                   Header="Id"/>
                                        <materialDesign:DataGridTextColumn Width="3*"
                                                                                   Binding="{Binding DisplayName}"
                                                                                   Header="Name" />
                                        <materialDesign:DataGridTextColumn Width="1*"
                                                                                   Binding="{Binding DisplayType}"
                                                                                   Header="Type" />
                                        <materialDesign:DataGridTextColumn Width="1.3*"
                                                                                   Binding="{Binding Quantity}"
                                                                                   Header="Quantity" />
                                        <materialDesign:DataGridTextColumn Width="1.5*"
                                                                                   Binding="{Binding SalePrice,StringFormat='{}{0:C}',ConverterCulture=vi-VN}"
                                                                                  Header="Price"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                        <!--Ordered List Grid-->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"/>
                                <RowDefinition/>
                                <RowDefinition Height="250"/>
                                <RowDefinition Height="60"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock Text="Ordered List"
                                           Foreground="IndianRed"
                                           FontSize="25"
                                           VerticalAlignment="Bottom"
                                           HorizontalAlignment="Right"
                                           Margin="0,0,10,0"/>
                            </Grid>
                            <!--Ordered List-->
                            <Grid Grid.Row="1">
                                <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto" Background="#D9D9D9" Margin="10">
                                    <ListBox ItemsSource="{Binding orders, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                             SelectedItem="{Binding SelectedOrderedItem,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" d:ItemsSource="{d:SampleData ItemCount=5}">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel IsItemsHost="True" Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border MaxHeight="80" Width="440" Background="White" BorderThickness="1" BorderBrush="DimGray" CornerRadius="3">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="60"/>
                                                            <ColumnDefinition Width="40"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid Grid.Column="0">
                                                            <StackPanel  Width="320">
                                                                <TextBlock HorizontalAlignment="Center" Height="23" Foreground="IndianRed" FontWeight="Bold" FontSize="20" TextWrapping="WrapWithOverflow">
                                                                                <Run Text="{Binding Product.DisplayName, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
                                                                </TextBlock>
                                                                <TextBlock Foreground="Black">
                                                                                <Run Text="Company:"  FontWeight="Bold"/>   
                                                                                <Run Text="{Binding Product.Company, UpdateSourceTrigger=PropertyChanged}"/>
                                                                </TextBlock>
                                                                <TextBlock Foreground="Black">
                                                                                <Run Text="Price:" FontWeight="Bold"/>   
                                                                                <Run Text="{Binding Product.SalePrice, UpdateSourceTrigger=PropertyChanged,StringFormat='{}{0:C}',ConverterCulture=vi-VN}"/>
                                                                </TextBlock>

                                                                <TextBlock HorizontalAlignment="Right" Height="24" Foreground="IndianRed" FontStyle="Italic">
                                                                                <Run FontSize="20" Text ="{Binding TotalPrice,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay,StringFormat='{}{0:C}',ConverterCulture=vi-VN}" />
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </Grid>
                                                        <Grid Grid.Column="1">
                                                            <Border BorderBrush="DimGray" BorderThickness="1">
                                                                <StackPanel VerticalAlignment="Center">
                                                                    <Button FontSize="14" BorderThickness="0" Content="+" Foreground="white" Background="CornflowerBlue" Width="60" Height="25" 
                                                                            Command="{Binding Path=DataContext.AmountIncreaseCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}"/>
                                                                    <TextBox BorderBrush="White" FontSize="10" Width="20" Height="28" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" 
                                                                            Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
                                                                    <Button FontSize="14" BorderThickness="0" Content="-" Foreground="white" Background="CornflowerBlue" Width="60" Height="25" 
                                                                            Command="{Binding Path=DataContext.AmountDecreaseCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}"/>
                                                                </StackPanel>
                                                            </Border>
                                                        </Grid>
                                                        <Grid Grid.Column="2">
                                                            <Button HorizontalAlignment="Left" Content="X" FontSize="13" BorderThickness="0"
                                                                    Width="40" Height="78" Command="{Binding Path=DataContext.DeleteOrderCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding}" Background="Red" Foreground="White"/>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </ScrollViewer>
                            </Grid>
                            <!--Bill-->
                            <Grid Grid.Row="2">
                                <Border Margin="10" BorderThickness="2" Background="#8DB2F5" CornerRadius="20" BorderBrush="Black">
                                    <Grid Margin="5" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="60"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Image Source="Images/LogoDeCo1.png" Height="40" 
                                               HorizontalAlignment="Left"
                                               Margin="10,5,0,15"/>
                                            <StackPanel HorizontalAlignment="Right" Margin="20,5">
                                                <TextBlock Text="Contact" Foreground="IndianRed" HorizontalAlignment="Right"
                                                       FontWeight="Bold" FontSize="16"/>
                                                <TextBlock Text="091015DeCo" Foreground="IndianRed" HorizontalAlignment="Right"/>
                                                <TextBlock Text="contactDeCo@gmail.com" Foreground="IndianRed" HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                        <Rectangle Height="2" Fill="LightGray" VerticalAlignment="Bottom"/>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="240"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="20"/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <TextBlock Text="Customer info:" Foreground="IndianRed" 
                                                       FontWeight="Bold" FontSize="20"/>
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="110"/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid Grid.Column="0">
                                                        <StackPanel>
                                                            <StackPanel.Resources>
                                                                <Style x:Key="tblockStyle" TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="IndianRed"/>
                                                                    <Setter Property="Margin" Value="5,2"/>
                                                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                                                </Style>
                                                            </StackPanel.Resources>
                                                            <TextBlock Style="{StaticResource tblockStyle}" Text="Phone Number:" FontWeight="Bold" Margin="5,5,5,15"/>
                                                            <TextBlock Style="{StaticResource tblockStyle}" Text="Id:"/>
                                                            <TextBlock Style="{StaticResource tblockStyle}" Text="Name:" />
                                                            <TextBlock Style="{StaticResource tblockStyle}" Text="Email:"/>
                                                            <TextBlock Style="{StaticResource tblockStyle}" Text="Rank:" Margin="5,20,0,0" />
                                                        </StackPanel>
                                                    </Grid>
                                                    <Grid Grid.Column="1">
                                                        <StackPanel>
                                                            <StackPanel.Resources>
                                                                <Style x:Key="tblockStyle" TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="DimGray"/>
                                                                    <Setter Property="Margin" Value="0,2"/>
                                                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                                                    <Setter Property="Text" Value="Filled"/>
                                                                </Style>
                                                            </StackPanel.Resources>
                                                            <TextBox Background="#D9D9D9" Width="120" Height="25" HorizontalAlignment="Left" Margin="0,5" 
                                                                     Text="{Binding FindByPhoneNumber, UpdateSourceTrigger=PropertyChanged}">
                                                                <i:Interaction.Triggers>
                                                                    <i:EventTrigger EventName="TextChanged">
                                                                        <i:InvokeCommandAction Command="{Binding LoadedFindByChanged}"/>
                                                                    </i:EventTrigger>
                                                                </i:Interaction.Triggers>
                                                            </TextBox>

                                                            <TextBlock Style="{StaticResource tblockStyle}" Text="{Binding Customer.Id, UpdateSourceTrigger=PropertyChanged}"/>
                                                            <TextBlock Style="{StaticResource tblockStyle}"  Text="{Binding Customer.DisplayName, UpdateSourceTrigger=PropertyChanged}"/>
                                                            <TextBlock Style="{StaticResource tblockStyle}" Text="{Binding Customer.Email, UpdateSourceTrigger=PropertyChanged}" Height="30" TextWrapping="Wrap"/>
                                                            <TextBlock Style="{StaticResource tblockStyle}" Text="{Binding Customer.MemberRank, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                            <Rectangle Width="2" Fill="LightGray" HorizontalAlignment="Right"/>
                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="20"/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <TextBlock Text="Bill info:" Foreground="IndianRed" 
                                                       FontWeight="Bold" FontSize="20"/>
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="90"/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Margin="4,0">
                                                        <StackPanel.Resources>
                                                            <Style x:Key="tblockStyle" TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="IndianRed"/>
                                                                <Setter Property="Margin" Value="5,2"/>
                                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                                            </Style>
                                                        </StackPanel.Resources>
                                                        <TextBlock Style="{StaticResource tblockStyle}" Text="BIll Id:" FontWeight="Bold"/>
                                                        <TextBlock Style="{StaticResource tblockStyle}" Text="Prepared by:" Margin="5,2,5,15" />
                                                        <TextBlock Style="{StaticResource tblockStyle}" Text="Date:"/>
                                                        <TextBlock Style="{StaticResource tblockStyle}" Text="Total price:" />
                                                        <TextBlock Style="{StaticResource tblockStyle}" Text="Discount(%):" />
                                                        <TextBlock Style="{StaticResource tblockStyle}" Text="Total:" 
                                                       FontWeight="Bold" FontStyle="Italic" FontSize="25" Margin="10,0"/>
                                                    </StackPanel>
                                                    <Grid Grid.Column="1">
                                                        <StackPanel>
                                                            <StackPanel.Resources>
                                                                <Style x:Key="tblockStyle" TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="DimGray"/>
                                                                    <Setter Property="Margin" Value="0,2,0,0"/>
                                                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                                                    <Setter Property="Text" Value="Filled"/>
                                                                </Style>
                                                            </StackPanel.Resources>
                                                            <TextBlock Style="{StaticResource tblockStyle}" FontWeight="Bold" Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"/>
                                                            <TextBlock Background="#D9D9D9" Width="40" Height="20" HorizontalAlignment="Left" FontSize="12" Text="{Binding ConstInstance.ActiveUser.EmployeeId}">
                                                                     <!--Text="{Binding FindByEmpId, UpdateSourceTrigger=PropertyChanged}" >
                                                                <i:Interaction.Triggers>
                                                                    <i:EventTrigger EventName="TextChanged">
                                                                        <i:InvokeCommandAction Command="{Binding LoadedFindByChanged}"/>
                                                                    </i:EventTrigger>
                                                                </i:Interaction.Triggers>-->
                                                            </TextBlock>
                                                            <TextBlock Style="{StaticResource tblockStyle}" Margin="0,0,0,8" FontWeight="Bold" FontSize="11" 
                                                                       Text="{Binding ConstInstance.ActiveUser.Employee.DisplayName, UpdateSourceTrigger=PropertyChanged}"/>
                                                            <!--<TextBox Background="#D9D9D9" HorizontalAlignment="Left"
                                                                     Width="120" Height="25" Margin="0,2,0,5"
                                                                     Text="{Binding Employee.DisplayName, UpdateSourceTrigger=PropertyChanged}"/>-->
                                                            <TextBlock Style="{StaticResource tblockStyle}" Margin="0,-5,0,2" Text="{Binding BillDate, UpdateSourceTrigger=PropertyChanged, StringFormat='dd/MM/yyyy'}"/>
                                                            <TextBlock Style="{StaticResource tblockStyle}" Text="{Binding TotalPrice, UpdateSourceTrigger=PropertyChanged,StringFormat='{}{0:C}',ConverterCulture=vi-VN}"/>
                                                            <TextBlock Style="{StaticResource tblockStyle}"  Text="{Binding Discount, UpdateSourceTrigger=PropertyChanged,StringFormat={}{0:0.00}%}"/>
                                                            <TextBlock Style="{StaticResource tblockStyle}" Text="{Binding TotalMoney, UpdateSourceTrigger=PropertyChanged ,StringFormat='{}{0:C}',ConverterCulture=vi-VN}"   
                                                                       FontWeight="Bold" FontStyle="Italic" FontSize="20" Margin="0,5"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                            <!--Button-->
                            <Grid Grid.Row="3">
                                <Button HorizontalAlignment="Left"
                                        Width="150" Margin="40,0"
                                        Background="#FF7D7D"
                                        Foreground="White"
                                        FontWeight="Light"
                                        Content="Cancle"
                                        BorderBrush="White"
                                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                        Command="{Binding cancelCommand}"/>
                                <Button HorizontalAlignment="Right"
                                        Width="150" Margin="40,0"
                                        Background="#A6E887"
                                        Foreground="White"
                                        FontWeight="Light"
                                        Content="Payment"
                                        BorderBrush="White"
                                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                        Command="{Binding paymentCommand}"/>
                            </Grid>

                        </Grid>
                    </Grid>
                </TabItem>
                <!--TAB CUSTOMER-->
                <TabItem Margin="0,8" Height="80" DataContext="{StaticResource CusVM}">
                    <TabItem.Header>
                        <StackPanel Width="180"
                                    Height="50"
                                    Orientation="Horizontal" Background="#F0D6AF">
                            <materialDesign:PackIcon Kind="PeopleGroup" 
                                                     Width="30"
                                                     Height="30"
                                                     Margin="10,0"
                                                     Foreground="Black"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="CUSTOMER" 
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       FontWeight="Light" 
                                       FontSize="20"
                                       />
                        </StackPanel>
                    </TabItem.Header>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="750"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!--Customer List Grid-->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"></RowDefinition>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock Text="List of Customers"
                                           Foreground="IndianRed"
                                           FontSize="25"
                                           VerticalAlignment="Bottom"
                                           Margin="10,0,0,0"/>
                                <TextBox 
                                                    Width="360"
                                                    Margin="120,20,10,0"
                                                    Height="40"
                                                    BorderBrush="Black"
                                                    Foreground="Black"
                                                    Background="Beige"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    materialDesign:HintAssist.Hint="   Find by Name   "
                                    materialDesign:HintAssist.HintOpacity="0.4"
                                    materialDesign:HintAssist.IsFloating="True"
                                    materialDesign:HintAssist.FloatingHintHorizontalAlignment="Right"
                                                    materialDesign:HintAssist.Foreground="Black"
                                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,-3,0,0"
                                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="5"
                                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                    BorderThickness="1"
                                                    VerticalAlignment="Top"
                                                    CaretBrush="Gray"   
                                Text="{Binding SearchString, UpdateSourceTrigger=PropertyChanged}"
                                   >
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="TextChanged">
                                            <i:InvokeCommandAction Command="{Binding Searching}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>



                            </Grid>
                            <!--Customers List-->
                            <Grid Grid.Row="1">
                                <DataGrid Margin="10" Background="#D9D9D9"
                                                  AlternatingRowBackground="#FFF8EBF9"
                                          RowBackground="WhiteSmoke"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  Focusable="False"
                                                  IsReadOnly="True"
                                                  SelectionUnit="FullRow"
                                                  IsSynchronizedWithCurrentItem="False"
                                                  FontSize="10"
                                                  ItemsSource="{Binding customers}" 
                                                  SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}">
                                    <DataGrid.Resources>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                            <Setter Property="Background" Value="#D9D9D9"/>
                                            <Setter Property="Height" Value="30"/>
                                            <Setter Property="Margin" Value="20,5"></Setter>
                                            <Setter Property="FontWeight" Value="Bold"></Setter>
                                            <Setter Property="FontSize" Value="13"></Setter>
                                        </Style>
                                    </DataGrid.Resources>

                                    <DataGrid.Columns>
                                        <materialDesign:DataGridTextColumn Width="70"
                                                                                   Binding="{Binding Id}"
                                                                                   FontSize="13" FontWeight="Bold"
                                                                                   Header="Id" />
                                        <materialDesign:DataGridTextColumn Width="1.6*"
                                                                                   Binding="{Binding DisplayName}"
                                                                                   Header="Name" />
                                        <materialDesign:DataGridTextColumn Width="1.65*"
                                                                                   Binding="{Binding MemberDate, StringFormat='dd/MM/yyyy'}"
                                                                                   Header="MemberDate"/>
                                        <materialDesign:DataGridTextColumn Width="1.5*"
                                                                                   Binding="{Binding PhoneNumber}"
                                                                                   Header="Phone" />
                                        <materialDesign:DataGridTextColumn Width="1.4*"
                                                                                   Binding="{Binding Email}"
                                                                                   Header="Email" />
                                        <materialDesign:DataGridTextColumn Width="1.1*"
                                                                                   Binding="{Binding MemberRank}"
                                                                                   Header="Rank" />
                                        <materialDesign:DataGridTextColumn Width="1*"
                                                                                   Binding="{Binding Spending,StringFormat='{}{0:C}',ConverterCulture=vi-VN}"
                                                                                   Header="Spending" />
                                        <materialDesign:DataGridTextColumn Width="1.1*"
                                                                                   Binding="{Binding Nationality}"
                                                                                   Header="Nationality" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                        <!--Customer Info Grid-->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="500"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <!--Customer Info-->
                            <Grid Grid.Row="0">
                                <TextBlock Text="Customer info"
                                           Foreground="IndianRed"
                                           FontSize="25"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           Margin="0,35,0,0"/>
                                <Button HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Width="80" Margin="0,35,15,0"
                                        Background="IndianRed"
                                        Foreground="White"
                                        FontWeight="Light"
                                        Content="Reload"
                                        BorderBrush="IndianRed"
                                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                        Command="{Binding cancelCommand}"/>
                                <Grid Margin="15,70,15,0" Background="#D9D9D9" >
                                    <Grid.ColumnDefinitions>
